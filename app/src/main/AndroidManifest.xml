<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tkt_dic_2">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash_screen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash_screen_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Exit"
            android:label="@string/exit_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".About"
            android:label="@string/about_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".PopupMenu"
            android:label="@string/popupMenu_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".NightMode"
            android:label="@string/nightMode_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".Voice"
            android:label="@string/voice_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".Fonts"
            android:label="@string/fonts_title"
            android:parentActivityName=".Setting" />
        <activity
            android:name=".Setting"
            android:label="@string/setting_title"
            android:parentActivityName=".MainActivity" /> <!-- the second line code is for the title name of action bar -->
        <!-- the third line code shows the back button on the action bar -->
        <activity
            android:name=".splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity" />
    </application>
</manifest>